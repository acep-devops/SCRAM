# General
# ------------------------------------------------------------------------------
DJANGO_READ_DOT_ENV_FILE=True
DJANGO_SETTINGS_MODULE=config.settings.production
DJANGO_SECRET_KEY={{ scram_django_secret_key }}
DJANGO_ADMIN_URL=admin/
DJANGO_ALLOWED_HOSTS={{ scram_nginx_host | default(ansible_fqdn) }}

# Security
# ------------------------------------------------------------------------------
# TIP: better off using DNS, however, redirect is OK too
DJANGO_SECURE_SSL_REDIRECT=False

# Email
# ------------------------------------------------------------------------------
DJANGO_SERVER_EMAIL=

# Gunicorn
# ------------------------------------------------------------------------------
WEB_CONCURRENCY=4

# Redis
# ------------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

OIDC_RP_CLIENT_ID={{ scram_oidc_client_id }}
OIDC_RP_CLIENT_SECRET={{ scram_oidc_client_secret }}
